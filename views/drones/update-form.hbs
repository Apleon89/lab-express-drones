<div class="container">
  <h2>Update the drone</h2>
  <div class="form-container">
    <form action="/drones/{{drone._id}}/edit" method="post">

      <label for="name">Nombre del Dron:</label>
      <input type="text" name="name" id="name" value="{{drone.name}}">
      <br>
      <label for="propellers">Número de Hélices:</label>
      <input type="number" name="propellers" id="propellers" value="{{drone.propellers}}">
      <br>
      <label for="maxSpeed">Velocidad Máxima:</label>
      <input type="number" name="maxSpeed" id="maxSpeed" value="{{drone.maxSpeed}}">
      <br>
      <button>Actualizar data del Drone</button>

    </form>
  </div>
</div>